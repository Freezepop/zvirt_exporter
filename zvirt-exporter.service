[Unit]
Description=zVirt Exporter Service
After=syslog.target
After=network.target

[Service]
EnvironmentFile=/home/zvirt-exporter/.bash_profile
Type=simple
User=zvirt-exporter
Group=zvirt-exporter
WorkingDirectory=/opt/zvirt-exporter
ExecStart=/usr/local/bin/uvicorn  --workers 1 --host 0.0.0.0 --port 9190 zvirt-exporter:app
Restart=always

[Install]
WantedBy=multi-user.target